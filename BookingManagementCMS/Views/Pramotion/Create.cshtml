@using CMS.Models;

@model PramotionViewModel;

@{
    ViewData["Title"] = "Create Pramotion";
}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5>Pramotion Information</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Pramotion" asp-action="Create" asp-antiforgery="true" method="post" class="theme-form mega-form">
                <div class="row">
                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">Name</label>
                        <input asp-for="Name"
                               class="form-control"
                               type="text"
                               placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">Code</label>
                        <input asp-for="Code"
                               class="form-control"
                               type="text"
                               placeholder="Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">
                            Start Date
                        </label>
                        <div class="input-group date"
                             id="dt-date"
                             data-target-input="nearest">
                            <div class="input-group">
                                <input asp-for="ValidityFrom"
                                       class="datepicker-here form-control digits"
                                       type="text"
                                       data-language="en"
                                       data-target="#dt-date" />

                                <div class="input-group-text"
                                     data-target="#dt-date"
                                     data-toggle="datetimepicker">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ValidityFrom" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">
                            End Date
                        </label>
                        <div class="input-group date"
                             id="dt-date"
                             data-target-input="nearest">
                            <div class="input-group">
                                <input asp-for="ValidityTo"
                                       class="datepicker-here form-control digits"
                                       type="text"
                                       data-language="en"
                                       data-target="#dt-date" />

                                <div class="input-group-text"
                                     data-target="#dt-date"
                                     data-toggle="datetimepicker">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="ValidityTo" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">Minimum Range</label>
                        <input asp-for="RangeMin"
                               class="form-control"
                               type="text"
                               placeholder="Minimum Range" />
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">Maximum Range</label>
                        <input asp-for="RangeMax"
                               class="form-control"
                               type="text"
                               placeholder="Maximum Range" />
                    </div>

                    <div class="col-sm-12">
                        <label class="form-label-title mt-3">Media Url</label>
                        <input asp-for="MediaUrl"
                               class="form-control"
                               type="text"
                               placeholder="Media Url" />
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label-title mt-3">IsActive</label>
                        <input asp-for="IsActive"
                               type="checkbox" />
                    </div>
                </div>
                <button class="btn btn-primary mt-3">Save Change</button>
            </form>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->