@{
    ViewData["Title"] = "Create Pramotion";
}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-12">
                    <!--Pramotion detail start-->
                    <div class="card">
                        <div class="card-header">
                            <h5>Add New Driver</h5>
                        </div>
                        <div class="card-body">
                            <form class="theme-form mega-form">
                                <div class="mb-3">
                                    <label class="form-label-title">Driver Name</label>
                                    <input class="form-control"
                                           type="text"
                                           placeholder="Driver Name" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label-title">
                                        Upload Driver Image here
                                    </label>

                                    <div class="dropzone" id="singleFileUpload">
                                        <div class="dz-message needsclick">
                                            <i class="icon-cloud-up"></i>
                                            <h6>Drop files here or click to upload.</h6>
                                            <span class="note needsclick">
                                                (This is just a demo dropzone. Selected files
                                                are <strong>not</strong> actually
                                                uploaded.)
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="gender" class="form-label-title">Gender</label>
                                    <select id="gender"
                                            class="form-control js-example-basic-single col-sm-12">
                                        <option value="MA">Male</option>
                                        <option value="FE">Female</option>
                                        <option value="HO">Other</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label-title">
                                        Date of Birthdate
                                    </label>
                                    <div class="input-group date"
                                         id="dt-date"
                                         data-target-input="nearest">
                                        <div class="input-group">
                                            <input class="datepicker-here form-control digits"
                                                   type="text"
                                                   data-language="en"
                                                   data-target="#dt-date" />

                                            <div class="input-group-text"
                                                 data-target="#dt-date"
                                                 data-toggle="datetimepicker">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 choose">
                                    <label class="form-label-title">ID Document </label>
                                    <input class="form-control"
                                           type="file"
                                           data-bs-original-title=""
                                           title="" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label-title">Contact Number</label>
                                    <input class="form-control"
                                           type="Number"
                                           placeholder="Contact Number" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label-title">
                                        Email Address
                                    </label>
                                    <input class="form-control"
                                           type="email"
                                           placeholder=" Email address" />
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-end">
                            <button class="btn btn-primary me-3">Submit</button>
                            <button class="btn btn-outline-primary">Cancel</button>
                        </div>
                    </div>
                    <!--Pramotion detail end-->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->