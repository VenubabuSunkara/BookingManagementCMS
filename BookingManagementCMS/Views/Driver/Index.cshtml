@using Entities
@model IEnumerable<DriverAndVehicle>
@{
    ViewData["Title"] = "Driver Vehicle List";
}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header card-header--2">
                    <div>
                        <h5>All Driver Vehicles</h5>
                    </div>
                    <form class="d-inline-flex">
                        <a href="@Html.ActionLink("", "")" class="btn btn-theme">
                            <i data-feather="plus-square"></i>Add New
                        </a>
                    </form>
                </div>

                <div class="card-body">
                    <div>
                        <div class="table-responsive table-desi">
                            <table class="all-cars-table table table-striped">
                                <thead>
                                    <tr>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Driver Name</th>
                                        <th>View</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var info in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span>
                                                    <img src="@info.DriverVehicleMedia.First().MediaValue" alt="@info.VehicleName" />
                                                </span>
                                            </td>
                                            <td>
                                                <a href="#">
                                                    <span class="d-block fw-bold">@info.VehicleName</span>
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge badge-primary"> @info.VehicleType</span>
                                            </td>
                                            <td>
                                                @(info.DriverFirstName + " " + info.DriverLastName)
                                            </td>
                                            <td>
                                                <a href="@Url.ActionLink("", "", "")">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.ActionLink("", "", "")">
                                                    <i class="fa fa-pencil-square-o"
                                                       aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.ActionLink("", "", "")">
                                                    <i class="fa fa-trash-o"
                                                       aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="pagination-box">
                    <nav class="ms-auto me-auto" aria-label="...">
                        <ul class="pagination pagination-primary">
                            <li class="page-item disabled">
                                <a class="page-link"
                                   href="javascript:void(0)"
                                   tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">1</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="javascript:void(0)">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid ends-->