@{
    ViewData["Title"] = "All Packages CAtegories";
}
<link href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.4/css/buttons.dataTables.css">
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header card-header--2">
                    <div>
                        <h5>All Package Categories</h5>
                    </div>
                    <form class="d-inline-flex">
                        <div class="d-flex gap-2">
                            <a href="@Url.ActionLink("AddCategory", "Packages")" class="btn btn-theme">
                                <i data-feather="file-plus"></i>Add New Category
                            </a>
                            <a href="@Url.ActionLink("ImportCategory", "Packages")" class="btn btn-theme">
                                <i data-feather="file-plus"></i>Import
                            </a>
                        </div>

                    </form>
                </div>

                <div class="card-body">
                    <div>
                        <div class="table-desi">
                            @Html.AntiForgeryToken()
                            <table class="all-cars-table table table-striped w-100" id="tblpackagecategories">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Category Name</th>
                                        <th>No. Of Tours</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                            <div id="packages-pagination" class="pagination-controls"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid ends-->
<!-- Container-fluid Ends-->
@section Scripts {
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>
    <!-- DataTables Buttons extension -->
    <script src="https://cdn.datatables.net/buttons/3.2.4/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.4/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <!-- JSZip for Excel export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <!-- pdfmake for PDF export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.4/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.4/js/buttons.print.min.js"></script>
    <script type="text/javascript">
         function editpackagecategory(categoryId){
                 $.ajax({
                         type: "GET",
                         url: "/Packages/EditPackageCategory",
                         data: { CategoryId:categoryId },
                         dataType: "json",
                         success: function(result) {
                            console.log(result);
                         },
                         error: function(req, status, error) {
                            console.error(error);
                         }
                    });
                }

        function deletePackage(categoryId){

             $.ajax({
                    type: "GET",
                    url: "/Packages/DeletePackageCategory",
                    data: { CategoryId:categoryId },
                    dataType: "json",
                    success: function(result) {
                    console.log("Sum is:", result);
                    },
                    error: function(req, status, error) {
                    console.error(error);
                    }
                });
        }

        var  packageCatListVM = {
                packagecatdt: null,
                init: function () {
                     const token = $('input[name="__RequestVerificationToken"]').val();
                     this.packagecatdt = $('#tblpackagecategories').DataTable({
                     processing: false,
                     serverSide: false,
                     stateSave: true,
                     lengthMenu: [10, 25, 50, { label: 'All', value: -1 }],
                     layout: {
                        topStart: {
                            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
                        }
                    },

                     ajax: {
                            url: '/Packages/GetAllPackageCategories',
                            type: 'POST',
                            contentType: 'application/json; charset=utf-8',
                            dataType: 'json',
                            data: function (d) {
                                return JSON.stringify(d); // Send as JSON string
                            },
                            headers: {
                                'RequestVerificationToken': token
                            },
                            error: function (xhr, error, thrown) {
                                console.error("DataTable error: ", xhr.responseText);
                            }
                        },
                     columns: [
                            { data: 'id' ,autoWidth: true, align:'center' },
                            { data: 'categoryName', autoWidth: true,align:'center' },
                            { data: 'noOfPackages', autoWidth: true,align:'center',
                                render: function (data, type, full, meta) {
                                    return `<a href="/Package/TourPackages/${full.id}">${data}</i></a>`
                                }
                            },
                            {
                                data: 'id', align:'center',autoWidth: true,
                                render: function (data, type, full, meta) {
                                    return `<a href="/Packages/EditPackageCategory/${data}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>`
                                }
                            },
                               {
                                data: 'id', align:'center',autoWidth: true,
                                render: function (data, type, full, meta) {
                                    return `<a href="javascript:void(0)" onclick="deletePackage(${data})"><i class="fa fa-trash-o"aria-hidden="true"></i></a>`
                                }
                            }
                        ],
                          language: {
                                emptyTable: "No entries to show"
                            }
                    });
                },
                refresh: function () {
                    if (this.packagedtcat) {
                        this.packagedtcat.ajax.reload();
                    }
                }
            };
            $(document).ready(function () {
                packageCatListVM.init();
        });
    </script>
}
