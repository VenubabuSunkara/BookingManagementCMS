                                    return `<a href="/DriverVehicle/Delete/${data}"><i class="fa fa-trash-o"aria-hidden="true"></i></a>`
                                }
                            }
                        ]
                    })
                },
                refresh: function () {
                        Driverdt.ajax.reload();
                }
            };
            $(document).ready(function () {
                driverListVM.init();
        });

